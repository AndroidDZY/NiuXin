<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 顶部缩略图 -->
    <include   
		android:id="@+id/include"  
		layout="@layout/suolue"/>
    <Button 
	    android:id="@+id/btn_contract_details_back"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/bottom_btn_width"
	    android:background="@color/red"
	    android:text="返回"
	    android:textSize="@dimen/textsize_middle"
	    android:textColor="@color/bottom_button_textcolor_default"
	    android:layout_alignParentBottom="true"/>  
    <ImageView 
        android:id="@+id/v_contract_details"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/declaration_sendpurpos_redline"
		android:layout_marginLeft="@dimen/layout_margin_five"
		android:layout_marginRight="@dimen/layout_margin_five"
		android:layout_marginBottom="@dimen/layout_margin_five"
		android:layout_above="@id/btn_contract_details_back"
        />
    <ScrollView 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_above="@id/v_contract_details"
    	android:layout_below="@id/include"
    	 >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="报单详细内容"
            android:gravity="center_vertical"
            android:textColor="@color/white"
        	android:textSize="@dimen/textsize_big"
        	android:background="@color/red"
        	android:paddingLeft="@dimen/layout_margin_ten"
        	android:textStyle="bold"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin_ten"
            android:paddingRight="@dimen/layout_margin_ten"
            android:paddingTop="@dimen/layout_margin_five"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="11"
                android:layout_height="wrap_content"
                android:text="合约类型"/>
            <TextView 
                android:id="@+id/tv_contract_details_contract"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="IF1509"/>
        </LinearLayout>
        <View 
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="@drawable/line_gray_new"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin_ten"
            android:paddingRight="@dimen/layout_margin_ten"
            android:paddingTop="@dimen/layout_margin_five"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="11"
                android:layout_height="wrap_content"
                android:text="操作类型"/>
            <TextView 
                android:id="@+id/tv_contract_details_operation"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="多开"/>
        </LinearLayout>
        <View 
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="@drawable/line_gray_new"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin_ten"
            android:paddingRight="@dimen/layout_margin_ten"
            android:paddingTop="@dimen/layout_margin_five"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="11"
                android:layout_height="wrap_content"
                android:text="价格"/>
            <TextView 
                android:id="@+id/tv_contract_details_price"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="3113"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:background="@drawable/bg_declaration_yellow"/>
        </LinearLayout>
        <View 
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="@drawable/line_gray_new"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin_ten"
            android:paddingRight="@dimen/layout_margin_ten"
            android:paddingTop="@dimen/layout_margin_five"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="wrap_content"
                android:text="手数"/>
            <TextView 
                android:id="@+id/tv_contract_details_handnum"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="20"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:background="@drawable/bg_declaration_yellow_small"
                />
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="手"
                android:layout_marginLeft="@dimen/layout_margin_five"
                />
        </LinearLayout>
        <View 
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="@drawable/line_gray_new"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin_ten"
            android:paddingRight="@dimen/layout_margin_ten"
            android:paddingTop="@dimen/layout_margin_five"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="wrap_content"
                android:text="仓位"/>
            <TextView 
                android:id="@+id/tv_contract_details_position"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="15"
                android:singleLine="true"
                android:background="@drawable/bg_declaration_yellow_small"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_marginLeft="@dimen/layout_margin_five"
                />
        </LinearLayout>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/declaration_sendpurpos_redline"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin_ten"
            android:paddingRight="@dimen/layout_margin_ten"
            android:paddingTop="@dimen/layout_margin_five"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="止盈止损范围"/>
            <TextView 
                android:id="@+id/tv_contract_details_minnum"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10000"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:paddingLeft="@dimen/layout_margin_five"
                android:background="@drawable/bg_declaration_yellow_small"/>
            <View 
            	android:layout_width="40dp"
            	android:layout_height="3dp"
            	android:layout_marginLeft="10dp"
            	android:layout_gravity="center"
            	android:background="@drawable/line_gray_new"/>
            <TextView 
                android:id="@+id/tv_contract_details_maxnum"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="50000"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:paddingLeft="@dimen/layout_margin_five"
                android:background="@drawable/bg_declaration_yellow_small"/>
        </LinearLayout>
        <View 
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="@drawable/line_gray_new"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin_ten"
            android:paddingRight="@dimen/layout_margin_ten"
            android:paddingTop="@dimen/layout_margin_five"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="备注"/>
            <TextView 
                android:id="@+id/tv_contract_details_remark"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:paddingLeft="@dimen/layout_margin_five"
                android:background="@drawable/bg_declaration_remark"
                android:text="无"/>
        </LinearLayout>
        <View 
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="@drawable/line_gray_new"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin_ten"
            android:paddingRight="@dimen/layout_margin_ten"
            android:paddingTop="@dimen/layout_margin_five"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配图"/>
            <ImageView 
                android:id="@+id/iv_contract_details_pictureurl"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_declaration_map"/>
        </LinearLayout>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_voice"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_t"
            android:paddingTop="20dp"
            android:gravity="center_vertical"
            >
            <TextView 
                android:id="@+id/tv_contract_details_sender_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="报单者"
                android:textSize="@dimen/textsize_middle"/>
            <ImageView 
                android:id="@+id/iv_contract_details_sender_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_declaration_head"
                android:layout_marginRight="50dp"
                />
        </LinearLayout>
        <ImageView 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/declaration_sendpurpos_redline"
			android:layout_marginLeft="@dimen/layout_margin_five"
			android:layout_marginRight="@dimen/layout_margin_five"
			android:layout_marginBottom="@dimen/layout_margin_five"
        	/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="收藏报单者"
                android:textSize="@dimen/textsize_middle"/>
			<ToggleButton
        		android:id="@+id/tog_btn_collect"
        		android:layout_width="50dp"
        		android:layout_height="30dp"
        		android:layout_marginRight="45dp"
        		android:layout_gravity="center_horizontal"
        		android:background="@android:color/transparent"
        		android:button="@drawable/ios7_btn"
        		android:checked="false"
        		android:text=""
        		android:textOff=""
        		android:textOn="" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/layout_margin_ten"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="屏蔽该人报单"
                android:textSize="@dimen/textsize_middle"/>
			<ToggleButton
        		android:id="@+id/tog_btn_shield"
        		android:layout_width="50dp"
        		android:layout_height="30dp"
        		android:layout_marginRight="45dp"
        		android:layout_gravity="center_horizontal"
        		android:background="@android:color/transparent"
        		android:button="@drawable/ios7_btn"
        		android:checked="false"
        		android:text=""
        		android:textOff=""
        		android:textOn="" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
