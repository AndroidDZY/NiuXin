<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
   	android:id="@+id/llytBottom"
	android:layout_width="match_parent"
	android:layout_height="33dp"
 	android:layout_alignParentBottom="true"
	android:background="#de4557"
	android:orientation="horizontal" >
	<Button
		android:id="@+id/btn_searchuser_cancle"
    	android:checked="true"
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="#de4557"
    	android:layout_gravity="center"
    	android:textSize="15sp"
    	android:textColor="#ffffff"
    	android:layout_weight="1"
    	android:clickable="true"
    	android:text="取消" 
    	/>
	<Button
    	android:id="@+id/btn_searchuser_finish"
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="#de4557"
    	android:layout_gravity="center"
    	android:textSize="15sp"
    	android:textColor="#ffffff"
    	android:layout_weight="1"
    	android:clickable="true"
    	android:text="完成" />
    </LinearLayout> 
    
<LinearLayout 
    android:layout_above="@id/llytBottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <!-- 顶部缩略图 -->
	<include   
		android:id="@+id/include"  
		layout="@layout/suolue"/> 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#de4557"
        android:gravity="center">
        <EditText 
            android:id="@+id/su_edittext"
            android:background="@drawable/edittext_search"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp"
            android:hint="@string/search_qun"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:paddingRight="8dp"
            android:drawableRight="@drawable/ic_voice01"
            android:singleLine="true"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/su_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#de4557"
            android:text="查找"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        <Button
            android:id="@+id/su_searchcancel"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#de4557"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="群组\n类型"
            android:textSize="15sp"
			/>
        <Spinner android:id="@+id/su_qunzuleixing"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/qun_type"
            />
        <TextView android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="排行\n类型"
            android:layout_marginLeft="40dp"
            android:textSize="15sp"
		/>
        <Spinner android:id="@+id/su_paihangleixing"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2f696969"
        android:layout_margin="5dp"
        />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="收费\n类型"
            android:textSize="15sp"
			/>
        <Spinner android:id="@+id/su_shoufeileixing"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/qun_charge"
            />
        <TextView android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="群组\n人数"
            android:layout_marginLeft="40dp"
            android:textSize="15sp"
		/>
        <Spinner android:id="@+id/su_qunzurenshu"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2f696969"
        android:layout_margin="5dp"
        />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="群组\n评分"
            android:textSize="15sp"
		/>
        <Spinner android:id="@+id/su_qunzupingfen"
	    android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:entries="@array/qun_score"
            />
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="5"
            android:layout_height="1dp">
        </LinearLayout>
    </LinearLayout>
 </LinearLayout> 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View  
        android:layout_width="match_parent"  
        android:layout_height="1dp" 
        android:background="#de4557"  />
   </LinearLayout>
   <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <TextView android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="为您推荐"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />
   <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
       <RelativeLayout 
        android:id="@+id/searchuser_relativelayout1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:paddingBottom="2dp"
        android:background="@drawable/word_backgroud_01"
        android:layout_weight="5">
             <TextView 
                android:id="@+id/searchuser_relativelayout1_title1"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
              <TextView 
                android:layout_centerInParent="true"
                android:id="@+id/searchuser_relativelayout1_summary1"
                android:lines="2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ellipsize="end"
                />
              <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:orientation="horizontal">
                  <TextView
                   android:layout_gravity="center"
                   android:background="@drawable/fuchuang_03"
                   android:layout_weight="1"
	               android:id="@+id/searchuser_relativelayout1_type1"
	               android:layout_width="0dp"
	               android:layout_height="wrap_content"
	               android:layout_marginRight="5dp"
	               android:layout_marginLeft="5dp"
	               android:textSize="12sp" 
	               android:textColor="#ffffff"
	               />
	              <TextView
	               android:layout_marginLeft="5dp"
	               android:layout_gravity="center"
	               android:layout_weight="1"
	               android:background="@drawable/fuchuang_03"
	               android:id="@+id/searchuser_relativelayout1_people1"
	               android:layout_width="0dp"
	               android:layout_height="wrap_content"
	               android:layout_marginRight="5dp"
	               android:textSize="12sp"
	               android:textColor="#ffffff"
	                />
              </LinearLayout>
        </RelativeLayout>
      <CheckBox
       android:layout_weight="1"
       android:id="@+id/searchuser_relativelayout1_star1"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:button="@null" 
       android:background="@drawable/star_03"/>
   </LinearLayout>
   <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">
       <RelativeLayout 
        android:id="@+id/searchuser_relativelayout2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/word_backgroud_02"
        android:layout_weight="5">
             <TextView 
                android:id="@+id/searchuser_relativelayout2_title2"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
              <TextView 
                android:layout_centerInParent="true"
                android:id="@+id/searchuser_relativelayout2_summary2"
                android:lines="2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ellipsize="end"
                />
              <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:orientation="horizontal">
                  <TextView
                   android:layout_gravity="center"
                   android:background="@drawable/fuchuang_03"
                   android:layout_weight="1"
	               android:id="@+id/searchuser_relativelayout2_type2"
	               android:layout_width="0dp"
	               android:layout_height="wrap_content"
	               android:layout_marginRight="5dp"
	               android:layout_marginLeft="5dp"
	               android:textSize="12sp" 
	               android:textColor="#ffffff"
	               />

	              <TextView
	               android:layout_marginLeft="5dp"
	               android:layout_gravity="center"
	               android:layout_weight="1"
	               android:background="@drawable/fuchuang_03"
	               android:id="@+id/searchuser_relativelayout2_people2"
	               android:layout_width="0dp"
	               android:layout_height="wrap_content"
	               android:layout_marginRight="5dp"
	               android:textSize="12sp"
	               android:textColor="#ffffff"
	                />
              </LinearLayout>
        
        
         </RelativeLayout>
         
      <CheckBox
       android:layout_weight="1"
       android:id="@+id/searchuser_relativelayout2_star2"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:button="@null" 
       android:background="@drawable/star_03"/>
   </LinearLayout>
   
   
   
   
   
   
  </LinearLayout>
   </LinearLayout>
    
</LinearLayout>


</RelativeLayout>