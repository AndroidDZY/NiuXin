<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants" >
    <CheckBox android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" 
        android:id="@+id/decla_checkbox"/>
    <EditText 
        android:id="@+id/decla_textview_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@null"
        android:focusable="false"
        android:inputType="text"
        />
    <LinearLayout android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">
        <ImageView 
            android:layout_marginLeft="20dp"
            android:id="@+id/decla_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/modeledit"
            />
        <ImageView 
            android:layout_marginLeft="20dp"
            android:id="@+id/decla_button_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/modeldelete"
            />
        
    </LinearLayout>

</LinearLayout>
