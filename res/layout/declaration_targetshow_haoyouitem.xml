<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_marginLeft="2dp"
    >
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/declatarget_haoyouitem_touxiang"
        android:background="@drawable/detail_content_touxiang"/>

    <RelativeLayout 
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:text="好友"
            android:layout_height="wrap_content"
            android:id="@+id/declatarget_haoyouitem_name"
            android:textSize="16sp"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/declaration_send_redline"/>
    </RelativeLayout>
     

</LinearLayout>
