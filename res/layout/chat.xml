<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
     >
    <!-- 顶部缩略图 -->
	<include   
		android:id="@+id/include"  
		layout="@layout/suolue"/> 
    <RelativeLayout 
        android:id="@+id/uplayout"
        android:layout_below="@id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#de4557"
        >
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="中信证券讨论组"
	        android:textSize="20sp"
	        android:textColor="#ffffff"
	        android:layout_centerInParent="true"
	        />
   
    </RelativeLayout> 
    

    <!-- 点击+显示的更多部分 -->
    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout 
            android:id="@+id/layout_more"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout 
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
            	<ImageButton 
            	    android:id="@+id/btn_collect"
                	android:layout_width="40dp"
                	android:layout_height="40dp"
                	android:layout_weight="2"
                	android:onClick="popupmenu"
                	android:background="@drawable/chat_collect"/>
            	<TextView 
            	    android:layout_width="wrap_content"
            	    android:layout_height="0dp"
            	    android:layout_weight="1"
            	    android:text="收藏"
            	    android:textSize="10sp"/>
            	<ImageButton
           		    android:layout_width="40dp"
           		    android:layout_height="40dp"
           		    android:layout_weight="2"
           		    android:background="@drawable/chat_setting" />

            	<TextView 
            	    android:layout_width="wrap_content"
            	    android:layout_height="0dp"
            	    android:layout_weight="1"
            	    android:text="设置"
            	    android:layout_gravity="center_horizontal"
            	    android:textSize="10sp"/>
           	</LinearLayout>
           	<LinearLayout 
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
            	<ImageButton 
                	android:layout_width="40dp"
                	android:layout_height="40dp"
                	android:layout_weight="2"
                	android:background="@drawable/chat_picture"/>
            	<TextView 
            	    android:layout_width="wrap_content"
            	    android:layout_height="0dp"
            	    android:layout_weight="1"
            	    android:text="图片"
            	    android:textSize="10sp"/>
           	</LinearLayout>
           	<LinearLayout 
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
            	<ImageButton 
            	    android:id="@+id/btn_share"
                	android:layout_width="40dp"
                	android:layout_height="40dp"
                	android:layout_weight="2"
                	android:background="@drawable/chat_share"/>
            	<TextView 
            	    android:layout_width="wrap_content"
            	    android:layout_height="0dp"
            	    android:layout_weight="1"
            	    android:text="分享"
            	    android:textSize="10sp"/>
           	</LinearLayout>
           	<LinearLayout 
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
            	<ImageButton 
                	android:layout_width="40dp"
                	android:layout_height="40dp"
                	android:layout_weight="2"
                	android:background="@drawable/chat_members"/>
            	<TextView 
            	    android:layout_width="wrap_content"
            	    android:layout_height="0dp"
            	    android:layout_weight="1"
            	    android:text="成员"
            	    android:textSize="10sp"/>
           	</LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
    
    <!-- 编辑框部分 -->
	<LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="#de4557"
        android:layout_above="@id/ll_more"
        android:gravity="center_vertical"
        >
        <Button 
            android:id="@+id/btn_back" 
            android:gravity="center" 
            android:layout_width="0dp" 
            android:layout_height="30dp"
            android:layout_weight="1" 
            android:background="@drawable/btn_chat_back"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"/>
	     <EditText
	        android:id="@+id/sendmessage"
	        android:layout_width="0dp" 
        	android:layout_height="30dp"
        	android:layout_weight="6" 
        	android:layout_margin="2dp"
        	android:gravity="center_vertical"
        	android:background="@drawable/edittext_search"
        	android:singleLine="true"
            android:paddingLeft="8dp"
            android:textSize="15sp"/>
	     <LinearLayout android:layout_width="0dp"
	         android:layout_height="30dp"
	         android:id="@+id/linear"
	         android:orientation="horizontal"
	         android:layout_weight="1"
	         ></LinearLayout>
   <!--     <Button
        	android:id="@+id/btn_send"
        	android:layout_width="0dp"
        	android:layout_weight="1" 
        	android:layout_height="30dp"
        	android:layout_margin="2dp"
        	android:background="@drawable/chat_send"/>  -->
        	
         <Button
        	android:id="@+id/emotion"
        	android:layout_width="0dp"
        	android:layout_weight="1" 
        	android:layout_height="30dp"
        	android:layout_margin="2dp"
        	android:background="@drawable/chat_face"
        	 />
        <Button
	        android:id="@+id/gengduo"
        	android:layout_width="0dp"
        	android:layout_weight="1" 
        	android:layout_height="30dp"
        	android:layout_margin="2dp"
        	android:background="@drawable/chat_more" />
    </LinearLayout> 
    
    <!-- 对话部分 -->  
        <ListView android:id="@+id/listview"
    	android:layout_below="@id/uplayout"
    	android:layout_above="@id/rl_bottom"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10.0dip" 
		android:layout_marginTop="10.0dip" 
		android:layout_marginRight="10.0dip"
		android:layout_marginBottom="10dp"
    	android:divider="@null"
    	android:dividerHeight="5dp"
    	android:scrollbars="none"
    	android:cacheColorHint="#00000000"></ListView>
</RelativeLayout>
