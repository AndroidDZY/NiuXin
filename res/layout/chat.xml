<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
     >
    <RelativeLayout 
        android:id="@+id/blackpang"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        ></RelativeLayout>
    <RelativeLayout 
        android:id="@+id/uplayout"
        android:layout_below="@id/blackpang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@String/中兴证券讨论组"
	        android:textSize="18sp"
	        android:layout_centerInParent="true"
	        />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">
        <Button 
            android:id="@+id/btn_back" 
            android:gravity="center" 
            android:textSize="12.0sp" 
            android:textColor="#ffffff"  
            android:layout_width="50dp" 
            android:layout_height="35dp" 
            android:drawableLeft="@drawable/chat_back"
            android:layout_alignParentLeft="true"/>
	     <EditText
	        android:id="@+id/sendmessage"
	        android:layout_toRightOf="@id/btn_back"
    	    android:layout_width="fill_parent"
        	android:layout_height="40dp"
        	android:layout_marginRight="120dp"
        	android:layout_centerVertical="true"
        	android:singleLine="true"
            android:textSize="12sp"/>
	   <RelativeLayout android:id="@+id/btongp"
	       android:layout_width="120dp"
	       android:layout_height="40dp"
	       android:layout_alignParentRight="true">
        <Button
        	android:id="@+id/btn_send"
        	android:layout_alignParentRight="true"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:layout_marginRight="80dp"
        	android:layout_centerVertical="true"
        	android:textSize="8sp"
        	android:drawableLeft="@drawable/chat_audio"/>
        <Button
        	android:id="@+id/emotion"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:layout_alignParentRight="true"
        	android:layout_marginRight="40dp"
        	android:layout_centerVertical="true"
        	android:drawableLeft="@drawable/chat_face"
        	android:textSize="8sp" />
        <Button
	        android:id="@+id/gengduo"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
            android:layout_alignParentRight="true"
        	android:layout_marginRight="0dp"
        	android:layout_centerVertical="true"
        	android:textSize="8sp" 
        	android:drawableLeft="@drawable/chat_more" />
        </RelativeLayout>
    </RelativeLayout>
    <ListView android:id="@+id/listview"
    	android:layout_below="@id/uplayout"
    	android:layout_above="@id/rl_bottom"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10.0dip" 
		android:layout_marginTop="10.0dip" 
		android:layout_marginRight="10.0dip"
		android:layout_marginBottom="10dp"
    	android:divider="@null"
    	android:dividerHeight="5dp"
    	android:scrollbars="none"
    	android:cacheColorHint="#00000000"></ListView>
    

</RelativeLayout>
