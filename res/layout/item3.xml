<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal" 
    android:layout_marginTop="75dp">
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="15dp">
       <RelativeLayout 
        android:id="@+id/guqun1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/word_backgroud_01"
        android:layout_weight="9">
             <TextView 
                android:id="@+id/item3_title1"
                android:textSize="13sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
              <TextView 
                android:layout_centerInParent="true"
                android:id="@+id/item3_summary1"
                android:lines="2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                />
              <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:orientation="horizontal">
                  <TextView
                   android:layout_gravity="center"
                   android:background="@drawable/fuchuangzuhe_03"
                   android:layout_weight="1"
	               android:id="@+id/item3_type1"
	               android:layout_width="wrap_content"
	               android:layout_height="18dp"
	               android:layout_marginRight="10dp"
	               android:layout_marginLeft="10dp"
	               android:textSize="12sp" 
	               />
	              <TextView
	               android:layout_marginLeft="10dp"
	               android:layout_gravity="center"
	               android:layout_weight="1"
	               android:background="@drawable/fuchuang_03"
	               android:id="@+id/item3_people1"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginRight="10dp"
	                />
              </LinearLayout>
        </RelativeLayout>
      <CheckBox
       android:layout_weight="1"
       android:id="@+id/item3_star1"
       android:layout_width="15dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:button="@null" 
       android:background="@drawable/star_03"/>
   </LinearLayout>
   <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="15dp">
       <RelativeLayout 
        android:id="@+id/guqun2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/word_backgroud_03"
        android:layout_weight="9">
             <TextView 
                android:id="@+id/item3_title2"
                android:textSize="13sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
              <TextView 
                android:layout_centerInParent="true"
                android:id="@+id/item3_summary2"
                android:lines="2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                />
              <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:orientation="horizontal">
                  <TextView
                   android:layout_gravity="center"
                   android:background="@drawable/fuchuangzuhe_03"
                   android:layout_weight="1"
	               android:id="@+id/item3_type2"
	               android:layout_width="wrap_content"
	               android:layout_height="18dp"
	               android:layout_marginRight="10dp"
	               android:layout_marginLeft="10dp"
	               android:textSize="12sp" 
	               />

	              <TextView
	               android:layout_marginLeft="10dp"
	               android:layout_gravity="center"
	               android:layout_weight="1"
	               android:background="@drawable/fuchuang_03"
	               android:id="@+id/item3_people2"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginRight="10dp"
	                />
              </LinearLayout>
        
        
         </RelativeLayout>
         
      <CheckBox
       android:layout_weight="1"
       android:id="@+id/item3_star2"
       android:layout_width="15dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:button="@null" 
       android:background="@drawable/star_03"/>
   </LinearLayout>
    
</LinearLayout>
