<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="报单内容填写"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>
    <View  
        android:layout_marginTop="5dp"
    	android:layout_width="match_parent"  
    	android:layout_height="1dp" 
    	android:background="#de4557"  />
    
    <RelativeLayout android:id="@+id/detail_model_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="选择模板"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/detail_model_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="模板1"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/detail_contact_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="合约类型"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/detail_contact_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="全选"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/detail_action_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="操作类型"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/detail_control_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="多开"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView 
            android:id="@+id/detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="价格"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_alignBaseline="@+id/detail_price"
            android:layout_width="100dp"
            android:hint="请输入价格"
            android:background="@null"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView 
            android:id="@+id/detail_shoushu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="手数"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"/>
        <RelativeLayout android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true">
	        <EditText
	            android:id="@+id/detail_edit_shoushu"
	            android:layout_width="80dp"
	            android:hint="手数"
	            android:background="@null"
	            android:gravity="center"
	            android:textSize="12sp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dp"
	            android:layout_alignParentLeft="true"/>
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignBaseline="@+id/detail_edit_shoushu"
	            android:text="手"
	            android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView 
            android:id="@+id/detail_cangwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="仓位"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"/>
        <RelativeLayout android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true">
	        <EditText
	            android:id="@+id/detail_edit_cangwei"
	            android:layout_width="80dp"
	            android:hint="仓位"
	            android:background="@null"
	            android:gravity="center"
	            android:textSize="12sp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dp"
	            android:layout_alignParentLeft="true"/>
	        <TextView 
	            android:layout_alignBaseline="@+id/detail_edit_cangwei"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:text="%"
	            android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View  
        android:layout_marginTop="5dp"
    	android:layout_width="match_parent"  
    	android:layout_height="1dp" 
    	android:background="#de4557"  />
    <LinearLayout 
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="止盈止损范围"
            />
        <LinearLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"></LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="备注"/>
        <EditText android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="配图"
            android:textSize="16sp"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />
        <Button 
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按住录制语音备注"
            android:gravity="center"
            android:id="@+id/detail_button_luying"/>
        </LinearLayout>
    
  </LinearLayout>
  
  <LinearLayout 
      android:layout_marginLeft="10dp"
      android:layout_marginRight="5dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true">
     <View  
        android:layout_marginTop="5dp"
    	android:layout_width="match_parent"  
    	android:layout_height="1dp" 
    	android:background="#de4557"  />
      <RelativeLayout 
          android:layout_marginTop="5dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/detail_send_desti">
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:text="发送目标"/>
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="已选"
              android:layout_alignParentRight="true"
              />
      </RelativeLayout>
      <LinearLayout 
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <Button
              android:id="@+id/detail_button_back"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="返回" />

          <LinearLayout 
              android:baselineAligned="true"
              android:layout_weight="3"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <CheckBox android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:layout_weight="1"
                  android:gravity="center"/>

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:gravity="center"
                  android:text="保存模板" />

          </LinearLayout>
          <Button 
              android:id="@+id/detail_button_send"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:text="发送"
              android:gravity="center"/>
      </LinearLayout>
  </LinearLayout>

</RelativeLayout>
