<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     <include   
		android:id="@+id/include"  
		layout="@layout/suolue"/>  
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_below="@id/include">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#de4557"
	    android:minHeight="30dp">
	    <TextView android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="填写报单内容"
	        android:textSize="16sp"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="8dp"
	        android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/detail_model_control"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="选择模板"
	            android:textSize="12sp"
	           />
	        <View  
	        android:layout_marginTop="5dp"
	    	android:layout_width="match_parent"  
	    	android:layout_height="1dp" 
	    	android:background="#cccccc"  />
        </LinearLayout>
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp">
	        <TextView
	            android:id="@+id/detail_model_choice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dp"
	            android:text="模板1"
	            android:layout_centerInParent="true"
	            android:textSize="12sp" />
	        <ImageView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/decla_lanch_detail_jiantou"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/detail_contact_type"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="合约类型"
	            android:textSize="12sp"
	           />
	        <View  
	        android:layout_marginTop="5dp"
	    	android:layout_width="match_parent"  
	    	android:layout_height="1dp" 
	    	android:background="#cccccc"  />
        </LinearLayout>
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp">
	        <TextView
	            android:id="@+id/detail_contact_show"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dp"
	            android:text="全选"
	            android:layout_centerInParent="true"
	            android:textSize="12sp" />
	        <ImageView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerHorizontal="true"
	            android:layout_marginRight="15dp"
	            android:background="@drawable/decla_lanch_detail_jiantou"/>
        </RelativeLayout>
    </LinearLayout>
    <!-- <RelativeLayout android:id="@+id/detail_contact_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="合约类型"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/detail_contact_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="全选"
            android:textSize="16sp" />
    </RelativeLayout> -->
    <LinearLayout android:id="@+id/detail_action_type"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="操作类型"
	            android:textSize="12sp"
	           />
	        <View  
	        android:layout_marginTop="5dp"
	    	android:layout_width="match_parent"  
	    	android:layout_height="1dp" 
	    	android:background="#cccccc"  />
        </LinearLayout>
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp">
	        <TextView
	            android:id="@+id/detail_control_show"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dp"
	            android:text="多开"
	            android:layout_centerInParent="true"
	            android:textSize="12sp" />
	        <ImageView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerHorizontal="true"
	            android:layout_marginRight="15dp"
	            android:background="@drawable/decla_lanch_detail_jiantou"/>
        </RelativeLayout>
    </LinearLayout>
   <!--  <RelativeLayout android:id="@+id/detail_action_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
