<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:minHeight="50dp"
    >
    <!-- 白色矩形区域 -->
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/liststyle_rectangle"
        >
    <ImageView 
        android:id="@+id/img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="fitXY"
        />
     <LinearLayout 
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_marginLeft="5dp"
        >
        <TextView 
            android:id="@+id/qunname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/lastmes" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#696969"
            android:textSize="12sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="12sp"
        android:textColor="#000000"
        />
    </LinearLayout>
    
    <!-- 红色正方形 区域-->
     <RelativeLayout 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shadow_low"
        android:paddingLeft="8dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        >
        <TextView 
            android:id="@+id/quntag"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />
        <TextView 
            android:id="@+id/renshu"            
	        android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
        <TextView 
            android:id="@+id/grade"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            android:layout_width="10dp"
            android:layout_height="16dp"
	    	android:textColor="#ffffff"
	    	android:background="@drawable/bg_grade"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
  
</LinearLayout>
