<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="horizontal"
    android:minHeight="85dp"
    android:gravity="bottom"
    >
    <!-- 白色矩形区域 -->
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="85dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:id="@+id/lly_list_declaration" 
        	android:layout_width="match_parent"
        	android:layout_height="65dp"
        	android:layout_alignParentBottom="true"
        	android:orientation="horizontal"
        	android:background="@drawable/liststyle_rectangle"
            >
        </LinearLayout>
        
         <!-- 合约、日期、时间-->
        <LinearLayout
            android:id="@+id/lly_list_declaration_date"
            android:layout_above="@id/lly_list_declaration"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/layout_margin_eight"
            android:layout_marginRight="@dimen/layout_margin_five"
            android:layout_marginBottom="-10dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/tv_declaration_contract"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_contract_blueframe"
                android:text="合约IF1509"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_date_blueframe"
                >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date"
                    />
                <TextView 
                    android:id="@+id/tv_declaration_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015年9月7日"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_ssmall"
                    />
                <TextView 
                    android:id="@+id/tv_declaration_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周一"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_ssmall"
                    />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_time"
                    />
                <TextView 
                    android:id="@+id/tv_declaration_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:23"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_ssmall"
                    />
            </LinearLayout>
        </LinearLayout>
        
        <!-- 操作类型、价格、手数、盈利、仓位，收藏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_declaration_collect"
       			android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:src="@drawable/ic_declaration_star_unpressed"/>
            <TextView 
                android:id="@+id/tv_declaration_operation_type"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_margin_ten"
                android:text="多平"
                android:lines="2"
                android:gravity="center"
                android:background="@drawable/bg_declaration_operation_type"
                android:textSize="@dimen/textsize_middle"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_margin_ten"
                android:layout_marginTop="@dimen/layout_margin_five"
                android:orientation="horizontal"
                >
                <!--价格、手数 -->
                <LinearLayout 
                    android:layout_width="wrap_content"
                	android:layout_height="match_parent"
                	android:orientation="vertical"
                    >
                    <LinearLayout 
                    	android:layout_width="wrap_content"
                		android:layout_height="18dp"
                		android:orientation="horizontal"
                    	>
                    	<TextView 
                    	    android:layout_width="40dp"
                    	    android:layout_height="match_parent"
                    	    android:background="@drawable/bg_declaration_yellow_dark"
                    	    android:text="价格"
                    	    android:textStyle="bold"
                    	    android:paddingLeft="2dp"
                    	    android:gravity="center_vertical"
                    	    android:textSize="@dimen/textsize_ssmall"/>
                    	<TextView 
                    	    android:id="@+id/tv_declaration_cost"
                    	    android:layout_width="30dp"
                    	    android:layout_height="match_parent"
                    	    android:layout_marginLeft="-20dp"
                    	    android:background="@drawable/bg_declaration_yellow_small"
                    	    android:text="3133"
                    	    android:textStyle="bold"
                    	    android:paddingLeft="2dp"
                    	    android:gravity="center_vertical"
                    	    android:textSize="@dimen/textsize_ssmall"/>
                	</LinearLayout>
                	<LinearLayout 
                    	android:layout_width="wrap_content"
						android:layout_height="18dp"
                		android:orientation="horizontal"
                		android:layout_marginTop="3dp"
                    	>
                    	<TextView 
                    	    android:layout_width="40dp"
                    	    android:layout_height="match_parent"
                    	    android:background="@drawable/bg_declaration_yellow_dark"
                    	    android:text="手数"
                    	    android:paddingLeft="2dp"
                    	    android:gravity="center_vertical"
                    	    android:textSize="@dimen/textsize_ssmall"/>
                    	<TextView 
                    	    android:id="@+id/tv_declaration_amount"
                    	    android:layout_width="30dp"
                    	    android:layout_height="match_parent"
                    	    android:layout_marginLeft="-20dp"
                    	    android:background="@drawable/bg_declaration_yellow_small"
                    	    android:text="1000"
                    	    android:paddingLeft="2dp"
                    	    android:gravity="center_vertical"
                    	    android:textSize="@dimen/textsize_ssmall"/>
                	</LinearLayout>
                </LinearLayout>
                
                 <!--盈利、仓位 -->
                <LinearLayout 
                    android:layout_width="wrap_content"
                	android:layout_height="match_parent"
                	android:orientation="vertical"
                	android:layout_marginLeft="@dimen/layout_margin_ten"
                    >
                    <LinearLayout 
                    	android:layout_width="wrap_content"
                		android:layout_height="18dp"
                		android:orientation="horizontal"
                    	>
                    	<TextView 
                    	    android:layout_width="40dp"
                    	    android:layout_height="match_parent"
                    	    android:background="@drawable/bg_declaration_yellow_dark"
                    	    android:text="盈利"
                    	    android:textStyle="bold"
                    	    android:paddingLeft="2dp"
                    	    android:gravity="center_vertical"
                    	    android:textSize="@dimen/textsize_ssmall"/>
                    	<TextView 
                    	    android:id="@+id/tv_declaration_profit"
                    	    android:layout_width="50dp"
                    	    android:layout_height="match_parent"
                    	    android:layout_marginLeft="-20dp"
                    	    android:background="@drawable/bg_declaration_yellow_small"
                    	    android:text="6340000"
                    	    android:textStyle="bold"
                    	    android:paddingLeft="2dp"
                    	    android:singleLine="true"
                    	    android:gravity="center_vertical"
                    	    android:textSize="@dimen/textsize_ssmall"/>
                	</LinearLayout>
                	<LinearLayout 
                    	android:layout_width="wrap_content"
						android:layout_height="18dp"
                		android:orientation="horizontal"
                		android:layout_marginTop="3dp"
                    	>
                    	<TextView 
                    	    android:layout_width="40dp"
                    	    android:layout_height="match_parent"
                    	    android:background="@drawable/bg_declaration_yellow_dark"
                    	    android:text="仓位"
                    	    android:paddingLeft="2dp"
                    	    android:gravity="center_vertical"
                    	    android:textSize="@dimen/textsize_ssmall"/>
                    	<TextView 
                    	    android:id="@+id/tv_declaration_position"
                    	    android:layout_width="30dp"
                    	    android:layout_height="match_parent"
                    	    android:layout_marginLeft="-20dp"
                    	    android:background="@drawable/bg_declaration_yellow_small"
                    	    android:text="15%"
                    	    android:paddingLeft="2dp"
                    	    android:gravity="center_vertical"
                    	    android:textSize="@dimen/textsize_ssmall"/>
                	</LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <!-- 红色正方形 区域-->
    <!-- 发送者头像、名字-->
     <LinearLayout 
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:background="@drawable/shadow_low"
		android:padding="@dimen/layout_margin_five"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView 
        	android:id="@+id/iv_declaration_sender_head"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:scaleType="fitXY"
        	android:src="@drawable/head_declaration_sender"
        	/>
        <TextView 
            android:id="@+id/tv_declaration_sender_name"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送者"
            />
    </LinearLayout>
  
</LinearLayout>

