<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal" 
    android:layout_marginTop="75dp">
    <RelativeLayout 
        android:layout_width="150dp"
        android:background="@drawable/kuangbai"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_weight="1">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="25dp"
            >
            <TextView 
                android:id="@+id/item4_title1"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <CheckBox 
                android:id="@+id/item4_star1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:button="@null"
                />
        </RelativeLayout>
        
       <RelativeLayout android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/item4_summary1"
                android:lines="2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                />
         </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:layout_alignParentBottom="true" >

           <TextView
               android:id="@+id/item4_type1"
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="22dp"
               android:layout_weight="1"
               android:textSize="12sp" />

           <TextView
               android:id="@+id/item4_people1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:layout_weight="2"
               android:layout_marginRight="5dp"
               android:layout_marginBottom="2dp"
                />

       </RelativeLayout>

    </RelativeLayout>
    
    <RelativeLayout android:layout_width="150dp"
        android:background="@drawable/kuangzhong"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="25dp"
            >
            <TextView 
                android:id="@+id/item4_title2"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <CheckBox android:id="@+id/item4_star2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:button="@null"
                />
        </RelativeLayout>
        
       <RelativeLayout android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            >
            <TextView android:id="@+id/item4_summary2"
                android:lines="2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                />
         </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:layout_alignParentBottom="true" >

           <TextView
               android:id="@+id/item4_type2"
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="22dp"
               android:layout_weight="1"
               android:textSize="12sp" />

           <TextView
               android:id="@+id/item4_people2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:layout_weight="2"
               android:layout_marginRight="5dp"
               android:layout_marginBottom="2dp"
                />

       </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
