<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"  >
    <!-- 顶部缩略图 -->
    <include   
		android:id="@+id/include"  
		layout="@layout/suolue"/>
    <!-- 页面标题 -->
    <TextView 
        android:id="@+id/tv_contract_type_select"
        android:layout_below="@id/include"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="合约类型选择"
        android:textSize="@dimen/textsize_big"
        android:background="@color/red"
        android:paddingLeft="@dimen/layout_margin_ten"
        android:textStyle="bold"
        android:gravity="center_vertical"/>
    <!-- 底部按钮部分 -->
     <LinearLayout 
        android:id="@+id/lly_contract_type_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_btn_width"
        android:layout_alignParentBottom="true">
        <Button 
            android:id="@+id/btn_contract_type_select_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="返回"
            android:textSize="@dimen/textsize_middle"
            android:textColor="@color/bottom_button_textcolor_default"
            android:background="@color/red"/>
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <Button 
            android:id="@+id/btn_contract_type_select_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="保存"
            android:textSize="@dimen/textsize_middle"
            android:textColor="@color/bottom_button_textcolor_default"
            android:background="@color/red"
            />
    </LinearLayout>
    <ImageView 
        android:id="@+id/v_contract_type_select"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/declaration_sendpurpos_redline"
		android:layout_marginLeft="@dimen/layout_margin_five"
		android:layout_marginRight="@dimen/layout_margin_five"
		android:layout_marginBottom="@dimen/layout_margin_five"
		android:layout_above="@id/lly_contract_type_select"
		/>
    <ListView 
     	android:id="@+id/lv_contract_type_select"
     	android:layout_below="@id/tv_contract_type_select"
     	android:layout_above="@id/v_contract_type_select"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:divider="@null"
    	android:layout_marginTop="3dp"
     />
</RelativeLayout>
