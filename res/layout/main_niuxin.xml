<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
       <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
        </FrameLayout>
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#de4557">
        <EditText 
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:background="@drawable/edittext_search"
            android:drawableLeft="@drawable/search_icon01"
            android:drawableRight="@drawable/ic_voice01"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:hint="@string/search"
            android:focusable="false"
            android:textSize="14sp"/>

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:background="#f7f7f7">
            <Button 
               android:id="@+id/liaotian"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="#f7f7f7"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="聊天"
                android:textSize="15dp"/>
            <Button 
                android:id="@+id/tongxunlu"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="通讯录"
                android:background="#f7f7f7"
                android:textSize="15dp"/>
            <Button 
                android:id="@+id/pengyouquan"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="投资圈"
                android:background="#f7f7f7"
                android:textSize="15dp"/>
            
         <ImageButton 
            android:id="@+id/createqun"
            android:layout_width="25dp"
            android:background="@drawable/btn_add"
            android:layout_height="25dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"/>
        </LinearLayout>
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View  
        android:layout_width="match_parent"  
        android:layout_height="1dp" 
        android:background="#de4557" 
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
       </LinearLayout>
    </LinearLayout>
</TabHost>
