<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 顶部缩略图 -->
	<include   
	android:id="@+id/include"  
	layout="@layout/suolue"/> 

    <TextView  
        android:layout_width="match_parent"
        android:background="#de4557"
        android:layout_height="25dp"
        android:text="创建群组"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="广告投放"
            android:textSize="18dp"
        	android:textColor="#0000FF"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        >
        <TextView 
            android:text="群组名称"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            />
        <EditText 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="请输入群组名称"
            android:maxLength="10"
            android:background="@drawable/edittext_03"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        >
        <TextView 
            android:text="群组类型"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            />
        <Spinner 
            android:id="@+id/qunzuleixing"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:entries="@array/qun_type"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        >
        <TextView 
            android:text="入群条件"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            />
        <Spinner 
            android:id="@+id/ruquncondition"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:entries="@array/qun_condition"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >
        <TextView 
            android:text="个股标签"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />
        <LinearLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
			>
        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入个股或板块代码"
            android:background="@drawable/edittext_03"
            android:textSize="15sp"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#00000000"
            android:text="添加更多..."
            android:textColor="#de4557"
            android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        >
        <TextView 
            android:text="添加描述"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            />
        <EditText 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="请输入群组描述"
            android:background="@drawable/edittext_03"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        >
        <TextView 
            android:text="收费模式"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            />
        <Spinner 
            android:id="@+id/shoufeimoshi"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:entries="@array/qun_charge"/>
    </LinearLayout>
  </LinearLayout>

    <LinearLayout
     	android:layout_width="match_parent"
     	android:layout_height="33dp"
      	android:layout_alignParentBottom="true"
     	android:background="#de4557"
     	android:orientation="horizontal" >
     	<Button
     		android:id="@+id/btn_cq_cancle"
         	android:checked="true"
         	android:layout_width="0dp"
         	android:layout_height="match_parent"
         	android:background="#de4557"
         	android:layout_gravity="center"
         	android:textSize="15sp"
         	android:textColor="#ffffff"
         	android:layout_weight="1"
         	android:clickable="true"
         	android:text="取消" 
         	/>
     	<Button
         	android:id="@+id/btn_cq_finish"
         	android:layout_width="0dp"
         	android:layout_height="match_parent"
         	android:background="#de4557"
         	android:layout_gravity="center"
         	android:textSize="15sp"
         	android:textColor="#ffffff"
         	android:layout_weight="1"
         	android:clickable="true"
         	android:text="完成" />
    </LinearLayout> 
</RelativeLayout>
