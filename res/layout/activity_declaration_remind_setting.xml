<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"  >
    <!-- 顶部缩略图 -->
    <include   
		android:id="@+id/include"  
		layout="@layout/suolue"/>  
    <TextView 
        android:id="@+id/tv_declaration_remind_setting"
        android:layout_below="@id/include"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="选择模板"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_big"
        android:background="@color/red"
        android:paddingLeft="@dimen/layout_margin_ten"
        android:textStyle="bold"
        android:gravity="center_vertical"/>
     <LinearLayout 
        android:id="@+id/lly_declaration_remind_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_btn_width"
        android:layout_alignParentBottom="true">
        <Button 
            android:id="@+id/btn_declaration_remind_setting_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="返回"
            android:textColor="@color/bottom_button_textcolor_default"
            android:textSize="@dimen/textsize_middle"
            android:background="@color/red"/>
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <Button 
            android:id="@+id/btn_declaration_remind_setting_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全选"
            android:textColor="@color/bottom_button_textcolor_default"
            android:textSize="@dimen/textsize_middle"
            android:background="@color/red"
            />
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <Button 
            android:id="@+id/btn_declaration_remind_setting_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:textColor="@color/bottom_button_textcolor_default"
            android:textSize="@dimen/textsize_middle"
            android:background="@color/red"
            />
    </LinearLayout>
    <ImageView 
        android:id="@+id/v_declaration_remind_setting"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/declaration_sendpurpos_redline"
		android:layout_marginLeft="@dimen/layout_margin_five"
		android:layout_marginRight="@dimen/layout_margin_five"
		android:layout_marginBottom="@dimen/layout_margin_five"
		android:layout_above="@id/lly_declaration_remind_setting"
		/>
    <ListView 
     	android:id="@+id/lv_declaration_remind_setting"
     	android:layout_below="@id/tv_declaration_remind_setting"
     	android:layout_above="@id/v_declaration_remind_setting"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="3dp"
    	android:divider="@null"
     />
</RelativeLayout>


